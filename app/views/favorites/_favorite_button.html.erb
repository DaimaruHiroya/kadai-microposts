<% if current_user.addfav?(favpost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: favpost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, favpost.id %>
    <%= f.submit 'Release Favorite', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, favpost.id %>
    <%= f.submit 'Add Favorite', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>